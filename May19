class Solution{
    public:
    int findClosest( int n, int k,int arr[]) 
    { 
        // Complete the function.
        sort(arr, arr+n);
        int dif = INT_MAX, ans = -1;
        for(int i=0; i<n; ++i) {
            if(abs(k-arr[i]) <= dif) {
                dif = abs(k-arr[i]);
                ans = arr[i];
            }
        }
        return ans;
    } 
};
